{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,  // Add this line
    "moduleResolution": "node"  // Add this line if it's not already there
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
